{
  "name": "@root-block/source",
  "version": "1.0.0",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "libs/*",
    "apps/*"
  ],
  "scripts": {
    "build:tokens": "nx run tokens:build",
    "build:ui": "nx run ui:build",
    "build:all": "nx run-many -t build --projects=tokens,ui",

    "demo:copy-tokens": "mkdir -p apps/demo/public/tokens && cp libs/tokens/dist/*.css apps/demo/public/tokens/",
    "demo:copy-ui": "mkdir -p apps/demo/public/js && cp libs/ui/dist/index.js apps/demo/public/js/rb-ui.js && cp libs/ui/dist/index.js.map apps/demo/public/js/rb-ui.js.map 2>/dev/null || true",
    "demo:prepare": "npm run build:all && npm run demo:copy-tokens && npm run demo:copy-ui",
    "build:demo": "npm run demo:prepare && nx run demo:build",
    "dev": "npm run demo:prepare && nx run demo:serve",

    "storybook": "nx run ui:storybook",
    "build:storybook": "nx run ui:build-storybook",

    "test": "nx run-many -t test",
    "test:watch": "nx run-many -t test --watch",

    "lint": "nx run-many -t lint --fix",
    
    "fresh": "nx reset && rm -rf dist node_modules/.cache && npm install"
  },
  "devDependencies": {
    "@custom-elements-manifest/analyzer": "^0.10.10",
    "@nx/eslint": "^21.6.3",
    "@nx/js": "^21.6.3",
    "@nx/storybook": "^21.6.3",
    "@nx/vite": "^21.6.3",
    "@nx/web": "21.6.3",
    "@nx/workspace": "21.6.3",
    "@storybook/addon-actions": "^9.0.8",
    "@storybook/addon-essentials": "^9.1.10",
    "@storybook/web-components-vite": "^9.1.10",
    "@swc-node/register": "~1.11.1",
    "@swc/core": "~1.13.5",
    "@swc/helpers": "~0.5.11",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.36.0",
    "nx": "21.6.3",
    "prettier": "^3.6.2",
    "rollup-plugin-minify-html-literals": "^1.2.6",
    "storybook": "^9.1.10",
    "style-dictionary": "^5.1.0",
    "terser": "^5.44.0",
    "ts-node": "10.9.2",
    "tsx": "^4.20.6",
    "typescript": "~5.9.3",
    "vite": "^7.1.8",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "lit": "^3.0.0",
    "tslib": "^2.3.0"
  }
}
