{
  "name": "@root-block/source",
  "version": "1.0.0",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "libs/*",
    "apps/*"
  ],
  "scripts": {
    "build:tokens": "nx run tokens:build",
    "build:ui": "nx run ui:build",
    "build": "nx run-many -t build",
    "test": "nx run-many -t test",
    "lint": "nx run-many -t lint",
    "demo": "npm run demo:copy-tokens && nx run demo:serve",
    "demo:copy-tokens": "mkdir -p apps/demo/public/tokens && cp libs/tokens/dist/*.css apps/demo/public/tokens/",
    "demo:build": "npm run demo:copy-tokens && nx run demo:build",
    "storybook": "nx run storybook:storybook",
    "theme-builder": "nx run theme-builder:serve"
  },
  "devDependencies": {
    "@nx/js": "^21.6.2",
    "@nx/vite": "^21.6.2",
    "@nx/workspace": "21.6.2",
    "@nx/eslint": "^21.6.2",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.0.0",
    "nx": "21.6.2",
    "prettier": "^3.0.0",
    "typescript": "~5.6.0",
    "vite": "^5.0.0",
    "vitest": "^2.0.0"
  },
  "dependencies": {
    "lit": "^3.0.0",
    "style-dictionary": "^4.0.0",
    "tslib": "^2.3.0"
  }
}
