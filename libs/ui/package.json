{
  "name": "@root-block/ui",
  "version": "1.0.0",
  "description": "Web Components library built with Lit following Atomic Design",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist/**/*",
    "custom-elements.json"
  ],
  "scripts": {
    "build": "vite build && tsc --emitDeclarationOnly && npm run analyze",
    "dev": "vite build --watch",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "lint": "eslint src --max-warnings 10 --fix",
    "analyze": "cem analyze --litelement",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "keywords": [
    "web-components",
    "lit",
    "atomic-design",
    "design-system",
    "typescript"
  ],
  "author": "Root Block",
  "license": "MIT",
  "customElements": "custom-elements.json"
}
